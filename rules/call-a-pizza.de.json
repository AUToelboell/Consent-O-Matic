{
  "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
  "call-a-pizza.de": {
      "detectors": [
          {
              "presentMatcher": [
                  {
                      "type": "css",
                      "target": {
                          "selector": ".cookies_modalbox"
                      }
                  }
              ],
              "showingMatcher": [
                  {
                      "type": "css",
                      "target": {
                          "selector": ".cookies_modalbox"
                      }
                  }
              ]
          }
      ],
      "methods": [
          {
              "name": "HIDE_CMP"
          },
          {
              "action": {
                  "type": "click",
                  "target": {
                      "selector": ".cookie_link"
                  }
              },
              "name": "OPEN_OPTIONS"
          },
          {
              "action": {
                  "type": "list",
                  "actions": [
                      {
                          "type": "waitcss",
                          "target": {
                              "selector": "label[for=\"functional_cookies\"]"
                          },
                          "retries": 10,
                          "waitTime": 250
                      },
                      {
                          "type": "waitcss",
                          "target": {
                              "selector": "label[for=\"marketing_cookies\"]"
                          },
                          "retries": 10,
                          "waitTime": 250
                      },
                      {
                          "type": "consent",
                          "consents": [
                              {
                                  "matcher": {
                                      "type": "checkbox",
                                      "target": {
                                          "selector": "label[for=\"functional_cookies\"]"
                                      }
                                  },
                                  "trueAction": {
                                      "type": "click",
                                      "target": {
                                          "selector": "label[for=\"functional_cookies\"]",
                                          "displayFilter": true
                                      }
                                  },
                                  "falseAction": {
                                      "type": "wait",
                                      "waitTime": 0
                                  },
                                  "type": "A"
                              }
                          ]
                      },
                      {
                          "type": "consent",
                          "consents": [
                              {
                                  "matcher": {
                                      "type": "checkbox",
                                      "target": {
                                          "selector": "label[for=\"marketing_cookies\"]"
                                      }
                                  },
                                  "trueAction": {
                                      "type": "click",
                                      "target": {
                                          "selector": "label[for=\"marketing_cookies\"]"
                                      }
                                  },
                                  "falseAction": {
                                      "type": "wait",
                                      "waitTime": 0
                                  },
                                  "type": "F"
                              }
                          ]
                      }
                  ]
              },
              "name": "DO_CONSENT"
          },
          {
              "action": {
                  "type": "click",
                  "target": {
                      "selector": ".cookies_save_settings"
                  }
              },
              "name": "SAVE_CONSENT"
          },
          {
              "name": "UTILITY"
          }
      ]
  }
}