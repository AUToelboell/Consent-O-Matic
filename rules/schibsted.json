{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "schibsted": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".BannerTextCookieBanner"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".OutlineButtonCookieBanner"
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP"
            },
            {
                "action": {
                    "type": "ifcss",
                    "target": {
                        "selector": "div[class^=TrackingSetting]"
                    },
                    "falseAction": {
                        "type": "click",
                        "target": {
                            "selector": ".OutlineButtonCookieBanner"
                        }
                    }
                },
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "click",
                            "target": {
                                "selector": "button[class^=Button-sc][color=primary]"
                            }
                        },
                        {
                            "type": "runmethod",
                            "method": "history.back()"
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}
