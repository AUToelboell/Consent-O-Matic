{
  "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
  "sverigesradio.se": {
      "detectors": [
          {
              "presentMatcher": [
                  {
                      "type": "css",
                      "target": {
                          "selector": "#cookie-popover"
                      }
                  }
              ],
              "showingMatcher": [
                  {
                      "type": "css",
                      "target": {
                          "selector": ".cookie-popover"
                      }
                  }
              ]
          }
      ],
      "methods": [
          {
              "name": "HIDE_CMP"
          },
          {
              "action": {
                  "type": "click",
                  "target": {
                      "selector": "#showConsentDialogBtn"
                  }
              },
              "name": "OPEN_OPTIONS"
          },
          {
              "action": {
                  "type": "list",
                  "actions": [
                      {
                          "type": "consent",
                          "consents": [
                              {
                                  "matcher": {
                                      "type": "checkbox",
                                      "target": {
                                          "selector": "span",
                                          "textFilter": [
                                              "Inställningar"
                                          ]
                                      }
                                  },
                                  "toggleAction": {
                                      "type": "click",
                                      "target": {
                                          "selector": "span",
                                          "textFilter": [
                                              "Inställningar"
                                          ]
                                      }
                                  },
                                  "type": "A"
                              }
                          ]
                      },
                      {
                          "type": "consent",
                          "consents": [
                              {
                                  "matcher": {
                                      "type": "checkbox",
                                      "target": {
                                          "selector": "span",
                                          "textFilter": [
                                              "Statistik och prestanda"
                                          ]
                                      }
                                  },
                                  "toggleAction": {
                                      "type": "click",
                                      "target": {
                                          "selector": "span",
                                          "textFilter": [
                                              "Statistik och prestanda"
                                          ]
                                      }
                                  },
                                  "type": "B"
                              }
                          ]
                      },
                      {
                          "type": "consent",
                          "consents": [
                              {
                                  "matcher": {
                                      "type": "checkbox",
                                      "target": {
                                          "selector": "span",
                                          "textFilter": [
                                              "Innehåll från andra webbplatser"
                                          ]
                                      }
                                  },
                                  "toggleAction": {
                                      "type": "click",
                                      "target": {
                                          "selector": "span",
                                          "textFilter": [
                                              "Innehåll från andra webbplatser"
                                          ]
                                      }
                                  },
                                  "type": "X"
                              }
                          ]
                      }
                  ]
              },
              "name": "DO_CONSENT"
          },
          {
              "action": {
                  "type": "click",
                  "target": {
                      "selector": "button",
                      "textFilter": [
                          "Godkänn valda"
                      ]
                  }
              },
              "name": "SAVE_CONSENT"
          },
          {
              "name": "UTILITY"
          }
      ]
  }
}
