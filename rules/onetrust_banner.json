{
	"$schema": "../rules.schema.json",
    "onetrust_banner": {
        "detectors": [
            {
                "presentMatcher": {
                    "type": "css",
                    "target": {
                        "selector": "#onetrust-banner-sdk, #cookie-consent-wrapper"
                    }
                },
                "showingMatcher": {
                    "type": "css",
                    "target": {
                        "selector": "#onetrust-banner-sdk, #cookie-consent-preferences",
                        "displayFilter": true
                    }
                }
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP"
            },
            {
                "name": "OPEN_OPTIONS"
            },
            {
                "name": "DO_CONSENT"
            },
            {
                "name": "SAVE_CONSENT"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "click",
                            "target": {
                                "selector": "#onetrust-pc-btn-handler, #cookie-consent-preferences"
                            }
                        }
                    ]
                },
                "name": "UTILITY"
            }
        ]
    }
}